<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_chat_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gaongil.safereturnhome.scene.ChatActivity" >

    <LinearLayout
        android:id="@+id/chat_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/skin_light" />

        <ListView
            android:id="@+id/chat_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white_smoke"
            android:divider="@color/transparent"
            android:dividerHeight="0dp"
            android:fastScrollEnabled="true"
            android:paddingBottom="@dimen/pad_10dp"
            android:paddingTop="@dimen/pad_10dp"
            tools:listitem="@layout/chat_message_rcv" >
        </ListView>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/compose_view" />
    </LinearLayout>

    <include
        android:id="@+id/drawer_chat_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        layout="@layout/drawer_chat_left" />

    <include
        android:id="@+id/drawer_chat_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        layout="@layout/drawer_chat_right" />

</android.support.v4.widget.DrawerLayout>