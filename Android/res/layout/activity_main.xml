<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gaongil.safereturnhome.scene.MainActivity" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Test"
            android:textStyle="bold" />

        <Button
            android:id="@+id/main_btn_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Drawer" />
    </LinearLayout>

	<include
	    android:id="@+id/drawer_main_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        layout="@layout/drawer_main_left" />
    
	<include
	    android:id="@+id/drawer_main_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        layout="@layout/drawer_main_right" />
	
</android.support.v4.widget.DrawerLayout>